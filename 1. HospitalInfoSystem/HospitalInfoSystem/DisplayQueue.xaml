        xmlns:local="clr-namespace:HospitalInfoSystem"
        mc:Ignorable="d"
        Title="DisplayQueue" Height="481" Width="808">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
